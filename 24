class Solution(object):
    def swapPairs(self, head):
        if head == None or head.next == None:
            return head
        superHead = ListNode(0)
        pre = superHead
        slow = head
        fast = head.next
        pre.next = slow
        while slow and fast:
            next = fast.next
            slow.next = fast.next
            pre.next = fast
            fast.next = slow
            pre = slow
            if next and next.next:
                fast = next.next
                slow= next
            else:
                break
        return superHead.next

